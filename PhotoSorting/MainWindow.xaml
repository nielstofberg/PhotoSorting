<Window x:Class="PhotoSorting.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PhotoSorting"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="26" />
			<RowDefinition />
		</Grid.RowDefinitions>
		<Label >Select Folder</Label>
		<TextBox Margin="87,0,330,0" Text="{Binding DirectoryPath}" IsReadOnly="True" />
		<Button Content="Select Folder" HorizontalAlignment="Left" Margin="489,0,0,0" VerticalAlignment="Center" Width="75" Click="button_Click" />
		<Button Content="Get Items" HorizontalAlignment="Right" Margin="0,0,10,0" VerticalAlignment="Center" Width="75" Click="StartAnalise" />
	</Grid>
</Window>
